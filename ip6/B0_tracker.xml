<?xml version="1.0" encoding="UTF-8"?>
<lccdd>
  <define>
    <comment>
      ---------------------------------
      B0 Tracker Parameters
      ---------------------------------
    </comment>
    <constant name="B0Tracker_zpos" value="B0PF_CenterPosition + B0PF_Length/2.0 - 50.0*cm"/>
    <constant name="B0Tracker_zmin" value="B0PF_CenterPosition - B0PF_Length/2.0 + 10.0*cm "/>
  	<constant name="B0Tracker_rotation" value="-0.025*rad"/>

	<constant name="B0Tracker_Station_1_xpos" value="-0.1375013*m" />
	<constant name="B0Tracker_Station_1_zpos" value="5.4*m" />
	<constant name="B0Tracker_Station_2_xpos" value="-0.14250078*m" />
    <constant name="B0Tracker_Station_2_zpos" value="5.6*m" />
	<constant name="B0Tracker_Station_3_xpos" value="-0.14750026*m" />
    <constant name="B0Tracker_Station_3_zpos" value="5.8*m" />
	<constant name="B0Tracker_Station_4_xpos" value="-0.15249974*m" />
    <constant name="B0Tracker_Station_4_zpos" value="6.0*m" />

  </define>

  <detectors>
    <detector 
      id="B0Tracker_Station_1_ID"
      name="B0Tracker_Station_1"
      readout="B0TrackerHits" 
      type="ip6_SimpleDiskTracker"
      insideTrackingVolume="true"
      reflect="false">
      <position x="B0Tracker_Station_1_xpos" y="0" z="B0Tracker_Station_1_zpos"/>
      <rotation x="0*rad" y="B0Tracker_rotation" z="0*rad"/>
      <layer id="1" vis="OrangeVis"
        inner_z="1.0*cm"
        inner_r="3.5*cm" 
        outer_r="15.0*cm"
        phi1="0.8*Pi*rad"
        phi2="-0.8*Pi*rad">
        <slice material="SiliconOxide" thickness="0.3*mm" vis="OrangeVis" sensitive="true" />
      </layer>
		
      <layer id="2"
        vis="AnlGold"
        inner_z="1.0*cm"
        inner_r="3.5*cm"
        outer_r="10.0*cm"
        phi1="-0.8*Pi*rad"
        phi2="0.8*Pi*rad">
        <slice material="SiliconOxide" thickness="0.3*mm" vis="OrangeVis" sensitive="true" />
      </layer>      
    </detector>

  <detector
      id="B0Tracker_Station_2_ID"
      name="B0Tracker_Station_2"
      readout="B0TrackerHits"
      type="ip6_SimpleDiskTracker"
      insideTrackingVolume="true"
      reflect="false"
      vis="AnlRed">
      <position x="B0Tracker_Station_2_xpos" y="0" z="B0Tracker_Station_2_zpos"/>
	  <rotation x="0*rad" y="B0Tracker_rotation" z="0*rad"/>
      <layer id="1"
        vis="AnlBlue"
        inner_z="1.0*cm"
        inner_r="3.5*cm"
        outer_r="15.0*cm"
		phi1="-0.8*Pi*rad"
        phi2="0.8*Pi*rad">
        <slice material="SiliconOxide" thickness="0.3*mm" vis="OrangeVis" sensitive="true" />
      </layer>

	  <layer id="2"
        vis="AnlBlue"
        inner_z="1.0*cm"
        inner_r="3.5*cm"
        outer_r="11.0*cm"
        phi1="0.8*Pi*rad"
        phi2="-0.8*Pi*rad">
        <slice material="SiliconOxide" thickness="0.3*mm" vis="OrangeVis" sensitive="true" />
      </layer>

    </detector>

	<detector
      id="B0Tracker_Station_3_ID"
      name="B0Tracker_Station_3"
      readout="B0TrackerHits"
      type="ip6_SimpleDiskTracker"
      insideTrackingVolume="true"
      reflect="false"
      vis="AnlRed">
      <position x="B0Tracker_Station_3_xpos" y="0" z="B0Tracker_Station_3_zpos"/>
	  <rotation x="0*rad" y="B0Tracker_rotation" z="0*rad"/>
      <layer id="1"
        vis="AnlBlue"
        inner_z="1.0*cm"
        inner_r="3.5*cm"
        outer_r="15.0*cm"
		phi1="-0.8*Pi*rad"
        phi2="0.8*Pi*rad">
        <slice material="SiliconOxide" thickness="0.3*mm" vis="OrangeVis" sensitive="true" />
      </layer>

	  <layer id="2"
        vis="AnlBlue"
        inner_z="1.0*cm"
        inner_r="3.5*cm"
        outer_r="11.0*cm"
        phi1="0.8*Pi*rad"
        phi2="-0.8*Pi*rad">
        <slice material="SiliconOxide" thickness="0.3*mm" vis="OrangeVis" sensitive="true" />
      </layer>


    </detector>


	<detector
      id="B0Tracker_Station_4_ID"
      name="B0Tracker_Station_4"
      readout="B0TrackerHits"
      type="ip6_SimpleDiskTracker"
      insideTrackingVolume="true"
      reflect="false"
      vis="AnlRed">
      <position x="B0Tracker_Station_4_xpos" y="0" z="B0Tracker_Station_4_zpos"/>
      <rotation x="0*rad" y="B0Tracker_rotation" z="0*rad"/>
      <layer id="1"
        vis="AnlBlue"
        inner_z="1.0*cm"
        inner_r="3.5*cm"
        outer_r="15.0*cm"
		phi1="-0.8*Pi*rad"
        phi2="0.8*Pi*rad">
        <slice material="SiliconOxide" thickness="0.3*mm" vis="OrangeVis" sensitive="true" />
      </layer>

	  <layer id="2"
        vis="AnlBlue"
        inner_z="1.0*cm"
        inner_r="3.5*cm"
        outer_r="12.0*cm"
        phi1="0.8*Pi*rad"
        phi2="-0.8*Pi*rad">
        <slice material="SiliconOxide" thickness="0.3*mm" vis="OrangeVis" sensitive="true" />
      </layer>


    </detector>




  </detectors>

  <readouts>
    <readout name="B0TrackerHits">
      <segmentation type="CartesianGridXY" grid_size_x="20.0*um" grid_size_y="20.0*um" />
      <id>system:8,barrel:3,layer:4,slice:4,x:32:-16,y:-16</id>  
    </readout>
  </readouts>

</lccdd>
