<?xml version="1.0" encoding="UTF-8"?>
<lccdd>
  <define>
    <comment>
      ---------------------------------
      Far Forward B0 Tracker Parameters
      ---------------------------------
    </comment>
    <constant name="B0Tracker_zpos" value="B0PF_CenterPosition + B0PF_Length/2.0 - 50.0*cm"/>
  </define>

  <detectors>
    <detector 
      id="B0Tracker_Station_1_ID"
      name="B0Tracker_Station_1"
      readout="B0TrackerHits" 
      type="ip6_SimpleDiskTracker"
      insideTrackingVolume="true"
      reflect="false"
      vis="AnlRed">
      <position x="150*mm" y="0" z="5400*mm"/>
      <layer id="1" 
        vis="AnlBlue"
		inner_z="1.0*cm"
        inner_r="3.5*cm" 
        outer_r="15.0*cm">
        <slice material="SiliconOxide" thickness="1.0*cm" vis="AnlBlue" sensitive="true" />
      </layer>
      

    </detector>

  <detector
      id="B0Tracker_Station_2_ID"
      name="B0Tracker_Station_2"
      readout="B0TrackerHits"
      type="ip6_SimpleDiskTracker"
      insideTrackingVolume="true"
      reflect="false"
      vis="AnlRed">
      <position x="150*mm" y="0" z="5700*mm"/>
      <layer id="1"
        vis="AnlBlue"
        inner_z="1.0*cm"
        inner_r="3.5*cm"
        outer_r="15.0*cm">
        <slice material="SiliconOxide" thickness="1.0*cm" vis="AnlBlue" sensitive="true" />
      </layer>


    </detector>

	<detector
      id="B0Tracker_Station_3_ID"
      name="B0Tracker_Station_3"
      readout="B0TrackerHits"
      type="ip6_SimpleDiskTracker"
      insideTrackingVolume="true"
      reflect="false"
      vis="AnlRed">
      <position x="150*mm" y="0" z="6000*mm"/>
      <layer id="1"
        vis="AnlBlue"
        inner_z="1.0*cm"
        inner_r="3.5*cm"
        outer_r="15.0*cm">
        <slice material="SiliconOxide" thickness="1.0*cm" vis="AnlBlue" sensitive="true" />
      </layer>


    </detector>


	<detector
      id="B0Tracker_Station_4_ID"
      name="B0Tracker_Station_4"
      readout="B0TrackerHits"
      type="ip6_SimpleDiskTracker"
      insideTrackingVolume="true"
      reflect="false"
      vis="AnlRed">
      <position x="150*mm" y="0" z="6200*mm"/>
      <layer id="1"
        vis="AnlBlue"
        inner_z="1.0*cm"
        inner_r="3.5*cm"
        outer_r="15.0*cm">
        <slice material="SiliconOxide" thickness="1.0*cm" vis="AnlBlue" sensitive="true" />
      </layer>


    </detector>




  </detectors>

  <readouts>
    <readout name="B0TrackerHits">
      <segmentation type="CartesianGridXY" grid_size_x="1.0*mm" grid_size_y="1.0*mm" />
      <id>system:8,barrel:3,layer:4,slice:4,x:32:-16,y:-16</id>  
    </readout>
  </readouts>

</lccdd>
