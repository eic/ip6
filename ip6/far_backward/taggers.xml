<?xml version="1.0" encoding="UTF-8"?>
<lccdd>

  <define>

    <constant name="tracker_pixel_size" value="55*um"/>

  </define>

  <detectors>
    
    <detector id="1" type="BackwardsTracker" name="TagTrack1"
      width="Tagger1_Width/2"
      height="Tagger1_Height/2"
      length="Tagger1_Length"
      place_into="BackwardsTaggerVacuum"
      place_into2="Tagger1">
      <trackLayer  id="1" type="timepix" z="1.2*mm" sensor_thickness="200*um"/>
      <trackLayer  id="2" type="timepix" z="300*mm" sensor_thickness="200*um"/>
      <trackLayer  id="3" type="timepix" z="600*mm" sensor_thickness="200*um"/>
      <windowLayer id="1" type="window"  z="0*mm"   thickness="1*mm" material="Copper"/>
      <!calorimeter id="1" type="TaggerCalPbWO4" thickness="Tag_Cal_1_Depth"/>
    </detector>

    <detector id="2" type="BackwardsTracker" name="TagTrack2"
      width="Tagger2_Width/2"
      height="Tagger2_Height/2"
      length="Tagger2_Length"
      place_into="BackwardsTaggerVacuum"
      place_into2="Tagger2">
      <trackLayer  id="1" type="timepix" z="1.2*mm" sensor_thickness="200*um"/>
      <trackLayer  id="2" type="timepix" z="300*mm" sensor_thickness="200*um"/>
      <rrackLayer  id="3" type="timepix" z="600*mm" sensor_thickness="200*um"/>
      <windowLayer id="1" type="window"  z="0*mm"   thickness="1*mm" material="Copper"/>
      <!calorimeter id="1" type="TaggerCalPbWO4" thickness="Tag_Cal_1_Depth"/>
    </detector>

  </detectors>

  <readouts>

    <readout name="TaggerTrackerHits">
      <segmentation type="CartesianGridXY" grid_size_x="tracker_pixel_size" grid_size_y="tracker_pixel_size" />
      <id>system:8,module:4,layer:4,sensor:2,x:32:-16,y:-16</id>
    </readout>

  </readouts>

</lccdd>


















</lccdd>

