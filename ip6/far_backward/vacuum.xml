<?xml version="1.0" encoding="UTF-8"?>
<lccdd>

  <define>
   
  </define>

  <detectors>

    <!-- Main vacuum volume -->
    <detector name="BackwardsVacuum" type="BackwardsVacuum" wall="2*mm" lumi="true">
      <focus      x="Dipole_Focus_X"    y="Dipole_Focus_Y"    z="Dipole_Focus_Z" />
      <bounding  
        xmin="Vacuum_BB_MinX"
        xmax="Vacuum_BB_MaxX"
        ymin="Vacuum_BB_MinY"
        ymax="Vacuum_BB_MaxY"
        zmin="Vacuum_BB_MinZ"
        zmax="Vacuum_BB_MaxZ"
      />
      <rotation   theta="Beam_Theta"/>
      <dimensions xL="Beam_WidthL" xR="Beam_WidthR" y="Beam_Height" z="Beam_Length"/>
      <exitdim    x="Exit_Width"   y="Exit_Height"  lumiZ="LumiWin_Z" lumiR="LumiWin_R" maxTheta="Exit_Theta"/>

      
      <module id="1"
        theta_min="Tagger1_Min_Theta"
        max_align="false"
        offset_min="Tagger1_Min_Offset"
        extend_vacuum="true"
        >
        <dimensions x="Tagger1_Width/2" y="Tagger1_Height/2" z="Tagger1_Length"/>
        <trackLayer id="1" type="timepix" z="1.2*mm"   sensor_thickness="200*um"/>
        <trackLayer id="2" type="timepix" z="300*mm" sensor_thickness="200*um"/>
        <trackLayer id="3" type="timepix" z="600*mm" sensor_thickness="200*um"/>
        <windowLayer id="1" type="window" z="0*mm" thickness="1*mm" material="Copper"/>
        <calorimeter id="1" type="TaggerCalPbWO4" thickness="Tag_Cal_1_Depth"/>
      </module>

      <module id="2"
        theta_min="Tagger2_Min_Theta"
        max_align="true"
        offset_min="Tagger2_Min_Offset"
        extend_vacuum="true"
        >
        <dimensions x="Tagger2_Width/2" y="Tagger2_Height/2" z="Tagger2_Length"/>
        <trackLayer id="1" type="timepix" z="1.2*mm"   sensor_thickness="200*um"/>
        <trackLayer id="2" type="timepix" z="300*mm" sensor_thickness="200*um"/>
        <trackLayer id="3" type="timepix" z="600*mm" sensor_thickness="200*um"/>
        <windowLayer id="1" type="window" z="0*mm" thickness="1*mm" material="Copper"/>
        <calorimeter id="1" type="TaggerCalPbWO4" thickness="Tag_Cal_1_Depth"/>
      </module>

    </detector>
     
  </detectors>

</lccdd>
