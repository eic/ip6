<?xml version="1.0" encoding="UTF-8"?>
<lccdd>
  <define>
    <comment>
      ----------------------------------------
      Forward Off-Momentum Tracker Parameters
      ----------------------------------------
    </comment>
    <constant name="ForwardOffMTracker_zpos" value="B1APF_CenterPosition + B1APF_Length/2.0 + 10.0*cm"/>
    <constant name="ForwardOffMTracker_xpos" value="B1APF_XPosition+40.0*cm"/>
  </define>

  <detectors>

    <detector
      id="ForwardOffMTracker_station_1_ID"
      name="ForwardOffMTracker_station_1"
      type="ip6_OffMomentumTracker"
      readout="ForwardOffMTrackerHits"
      vis="AnlRed"
      reflect="false">
      <position x="-780.0*mm" y="0" z="22500*mm"/>
      <rotation x="0*rad" y="0.0" z="0*rad"/>
      <module name="Module1" vis="AnlProcess_Blue">
        <shape x="10.0*cm" y="20.0*cm"/>
        <module_component thickness="0.3*mm" material="SiliconOxide" sensitive="true" vis="RedVis" />
      </module>
      <layer id="1" module="Module1">
        <envelope  vis="AnlRed" x="10.0*cm" y="20.0*cm" length="1.0*cm" 
          zstart="0.0/2.0" />
      </layer>
    </detector>


    <!--
    <detector 
      id="ForwardOffMTracker_station_1_ID"
      name="ForwardOffMTracker_station_1"
      readout="ForwardOffMTrackerHits" 
      type="ip6_RectangularTracker"
      insideTrackingVolume="true"
      reflect="false"
      vis="AnlRed">
      <position x="-780.0*mm" y="0" z="22500*mm"/>
      <layer id="1" 
        vis="RedVis"
        x="10.0*cm" 
        y="20.0*cm" >
        <slice material="SiliconOxide" thickness="0.3*mm" vis="RedVis" sensitive="true" />
      </layer>
    </detector>
    -->

	<detector
      id="ForwardOffMTracker_station_2_ID"
      name="ForwardOffMTracker_station_2"
      readout="ForwardOffMTrackerHits"
      type="ip6_RectangularTracker"
      insideTrackingVolume="true"
      reflect="false"
      vis="AnlRed">
      <position x="-870.0*mm" y="0" z="24500*mm"/>
      <layer id="1"
        vis="RedVis"
        x="10.0*cm"
        y="20.0*cm" >
        <slice material="SiliconOxide" thickness="0.3*mm" vis="RedVis" sensitive="true" />
      </layer>
    </detector>

	<detector
      id="ForwardOffMTracker_station_3_ID"
      name="ForwardOffMTracker_station_3"
      readout="ForwardOffMTrackerHits"
      type="ip6_RectangularTracker"
      insideTrackingVolume="true"
      reflect="false"
      vis="AnlRed">
      <position x="-1425.0*mm" y="0" z="34000*mm"/>
      <layer id="1"
        vis="RedVis"
        x="30.0*cm"
        y="20.0*cm" >
        <slice material="SiliconOxide" thickness="0.3*mm" vis="RedVis" sensitive="true" />
      </layer>
    </detector>

	<detector
      id="ForwardOffMTracker_station_4_ID"
      name="ForwardOffMTracker_station_4"
      readout="ForwardOffMTrackerHits"
      type="ip6_RectangularTracker"
      insideTrackingVolume="true"
      reflect="false"
      vis="RedVis"> 
      <position x="-1530.0*mm" y="0" z="36000*mm"/>
      <layer id="1"
        vis="RedVis"
        x="30.0*cm"
        y="20.0*cm" >
        <slice material="SiliconOxide" thickness="0.3*mm" vis="RedVis" sensitive="true" />
      </layer>
    </detector>


  </detectors>

  <readouts>
    <readout name="ForwardOffMTrackerHits">
      <segmentation type="CartesianGridXY" grid_size_x="0.5*mm" grid_size_y="0.5*mm" />
      <id>system:8,layer:5,module:5,slice:4,x:32:-16,y:-16</id>  
    </readout>
  </readouts>

</lccdd>
