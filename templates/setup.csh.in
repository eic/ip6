#!/bin/tcsh

setenv BEAMLINE @PROJECT_NAME@
setenv BEAMLINE_PATH @CMAKE_INSTALL_PREFIX@/share/@PROJECT_NAME@
setenv BEAMLINE_CONFIG @PROJECT_NAME@
setenv BEAMLINE_VERSION @GIT_BRANCH@

## note: we will phase out the JUGGLER_* flavor of variables in the future
setenv JUGGLER_BEAMLINE $BEAMLINE
setenv JUGGLER_BEAMLINE_CONFIG $BEAMLINE_CONFIG
setenv JUGGLER_BEAMLINE_VERSION $BEAMLINE_VERSION
setenv JUGGLER_BEAMLINE_PATH $BEAMLINE_PATH

## setenv beamline libraries (FIXME: incorrect when LD_LIBRARY_PATH empty)
setenv LD_LIBRARY_PATH @CMAKE_INSTALL_PREFIX@/lib:${LD_LIBRARY_PATH}
